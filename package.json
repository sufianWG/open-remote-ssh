{
  "name": "open-remote-ssh",
  "displayName": "Open Remote - SSH",
  "description": "Open any folder on a remote machine using SSH and take advantage of full feature set",
  "version": "1.0.1",
  "publisher": "sufian-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/sufianWG/open-remote-ssh.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "remote",
    "ssh",
    "remote development",
    "remote ssh"
  ],
  "activationEvents": [
    "onCommand:openremotessh.connect",
    "onCommand:openremotessh.disconnect",
    "onCommand:openremotessh.settings",
    "onCommand:openremotessh.showLog",
    "onCommand:openremotessh.openTerminal",
    "onFileSystem:openssh",
    "onView:sshHosts"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openremotessh.connect",
        "title": "Remote-SSH: Connect to Host..."
      },
      {
        "command": "openremotessh.disconnect",
        "title": "Remote-SSH: Disconnect from Host"
      },
      {
        "command": "openremotessh.settings",
        "title": "Remote-SSH: Settings"
      },
      {
        "command": "openremotessh.showLog",
        "title": "Remote-SSH: Show Log"
      },
      {
        "command": "openremotessh.openTerminal",
        "title": "Remote-SSH: Open Terminal"
      }
    ],
    "configuration": {
      "title": "Remote SSH",
      "properties": {
        "remote-ssh.configFile": {
          "type": "string",
          "default": "~/.ssh/config",
          "description": "The absolute file path to a custom SSH config file."
        },
        "remote-ssh.showLoginTerminal": {
          "type": "boolean",
          "default": false,
          "description": "Show login terminal when connecting to remote host."
        },
        "remote-ssh.defaultExtensions": {
          "type": "array",
          "default": [],
          "description": "List of extensions to install on remote by default."
        },
        "remote-ssh.connectTimeout": {
          "type": "number",
          "default": 15000,
          "description": "Connection timeout in milliseconds."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "remote-explorer",
          "title": "Remote Explorer",
          "icon": "resources/remote-explorer.svg"
        }
      ]
    },
    "views": {
      "remote-explorer": [
        {
          "id": "sshHosts",
          "name": "SSH Targets",
          "icon": "resources/remote-explorer.svg",
          "contextualTitle": "SSH Targets"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "openremotessh.connect",
          "when": "view == sshHosts",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/ssh2": "^1.11.11",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ssh2": "^1.14.0",
    "ssh2-promise": "^1.0.3",
    "node-ssh": "^13.0.0"
  }
}